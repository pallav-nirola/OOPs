#include <iostream>
using namespace std;
class Hero
{
public:
    string name;
    Hero()
    {
        name = "Buddy";
        cout << "Your hero is created with " << name << endl;
    }
};

int main()
{
    //Hero Ramesh;// Create Statically
Hero* Ramesh = new Hero();               // Create Hero dynamically
    cout << Ramesh->name << endl;          // Use -> to access members
    delete Ramesh;                         // Clean up memory
    cout << Ramesh.name << endl;

    return 0;
}
