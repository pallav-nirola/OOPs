#include <iostream>
using namespace std;
class Hero
{
public:
    string str;
    Hero()
    {
        str = "Default Constructor";
        cout << "Your hero is created with " << str << endl;
    }
};

int main()
{
    //Hero Ramesh;// Create Statically
Hero* Ramesh = new Hero();               // Create Hero dynamically
    cout << Ramesh->name << endl;          // Use -> to access members
    delete Ramesh;                         // Clean up memory
    cout << Ramesh.str << endl;

    return 0;
}
