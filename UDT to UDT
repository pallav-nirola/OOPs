#include <iostream>
#include <cmath>
using namespace std;
class Polar
{
    float radius;
    float angle; // in degrees
public:
    Polar(float r = 0, float a = 0)
    {
        radius = r;
        angle = a; // in degrees
    }
    void display()
    {
        cout << "Radius = " << radius << ", Angle = " << angle << " degrees" << endl;
    }
};
class Cartesian
{
    float x, y;
public:
    Cartesian(float x_coordinate = 0, float y_coordinate = 0)
    {
        x = x_coordinate;
        y = y_coordinate;
    }

    // ðŸ‘‡ Make conversion EXPLICIT
    explicit operator Polar()
    {
        float r = sqrt(x * x + y * y);
        float theta = atan2(y, x) * 180 / 3.14159;
        return Polar(r, theta);
    }
};
int main()
{
    Cartesian c(3, 4);
    // Polar p = c;   âŒ Error: implicit conversion not allowed now
    // âœ… Must explicitly convert:
    Polar p = static_cast<Polar>(c);
    p.display();
    return 0;
}
