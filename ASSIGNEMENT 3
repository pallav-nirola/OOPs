#include <iostream>
using namespace std;

class Rectangle
{
private:
    int length;
    int breadth;

public:
    Rectangle()
    {
        length = 0;
        breadth = 0;
    }
    Rectangle(int a, int b)
    {
        length = a;
        breadth = b;
    }
    Rectangle(int w)
    {
        length = w;
        breadth = w;
    }
    void get_area()
    {

        cout << "Area of Rectangle is: " << length * breadth << endl;
    }
};

int main()
{
    Rectangle r1;
    Rectangle r2(5, 10);
    Rectangle r3(7);
    r1.get_area();
    cout<<endl;
    r2.get_area();
    cout<<endl;
    r3.get_area();
    return 0;
}
#include <iostream>
using namespace std;

class Bank
{
private:
    int balance;

public:
    string name;
    int account_number;
    Bank(string n, int ac, int b)
    {
        name = n;
        account_number = ac;
        balance = b;
    }
    void setBalance(int b)
    {
        balance = b;
    }
    void get_balance()
    {
        cout << "Balance is: " << balance << endl;
    }
};
class Savings : public Bank
{

private:
    int interest;

public:
    Savings(string n, int ac, int b, int in) : Bank(n, ac, b)
    {
        interest = in;
    };
    void addInterest()
    {
        int newBalance = get_balance() + (get_balance() * interest / 100);
        setBalance(newBalance);
    }
};

int main() _
{
    Savings s1("Pallav", 123456, 1000, 5.0);

    cout << "Initial Account Details:\n";
    s1.get_balance();
    cout << endl
         << "Adding interest...\n";
    s1.addInterest();

    cout << endl
         << "Updated Account Details:\n";
    s1.get_balance();
    return 0;
}
