#include <iostream>
using namespace std;
class ABC
{
public:
    ABC()
    {
        cout << "ABC Constructor" << endl;
    }
    ~ABC()
    {
        cout << "ABC Destructor" << endl;
    }
};

int main()
{

    if (true)
    {
       ABC obj;// if condition true the object would be created and destroyed same time the move the next line in the main command
    }
    cout << "End of main function" << endl;

    return 0;
}
// output would be 
ABC Constructor
ABC Destructor
End of main function
/////////////////////////////////////////////////if we add static here /////////////////////////////////////////////////////////////////
#include <iostream>
using namespace std;
class ABC
{
public:
    ABC()
    {
        cout << "ABC Constructor" << endl;
    }
    ~ABC()
    {
        cout << "ABC Destructor" << endl;
    }
};

int main()
{

    if (true)
    {
       static ABC obj; // static object stays till the very end of the command and only detsorys when the main is fullfilled, not unlike the non-static one which end with the if block
    }
    cout << "End of main function" << endl;

    return 0;
}
// ouput would be 
ABC Constructor
End of main function
ABC Destructor/// the object will reminai till the main function doesnot comes to an end
